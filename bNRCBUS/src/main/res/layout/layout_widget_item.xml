<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dip"
            android:layout_toLeftOf="@id/rLayout"
            android:alpha="0.9"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_bus" />

            <LinearLayout
                android:id="@+id/lLayout_busline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/iv_bus"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_buslineName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_bus"
                    android:background="@android:color/transparent"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="夜30外"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/tv_hint2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignBottom="@id/tv_buslineName"
                            android:layout_toRightOf="@id/tv_buslineName"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_dao" />

                        <TextView
                            android:id="@+id/tv_destination2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/tv_buslineName"
                            android:layout_toRightOf="@id/tv_hint1"
                            android:ellipsize="end"
                            android:gravity="left|top"
                            android:paddingLeft="3dp"
                            android:singleLine="true"
                            android:text="双桥医院"
                            android:textColor="@color/dark_gray"
                            android:textSize="11dp"
                            android:typeface="serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/tv_hint1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_alignBottom="@id/tv_buslineName"
                            android:layout_toRightOf="@id/tv_buslineName"
                            android:scaleType="fitCenter"
                            android:src="@drawable/destination" />

                        <TextView
                            android:id="@+id/tv_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/tv_buslineName"
                            android:layout_toRightOf="@id/tv_hint1"
                            android:ellipsize="end"
                            android:gravity="left|top"
                            android:paddingLeft="3dp"
                            android:singleLine="true"
                            android:text="双桥医院"
                            android:textColor="@color/dark_gray"
                            android:textSize="11dp"
                            android:typeface="serif" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="123"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="@drawable/list_divider"
        android:visibility="gone" />

</LinearLayout>